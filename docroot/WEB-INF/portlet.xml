<?xml version="1.0"?>
	<portlet-app version="2.0"
	xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
				<portlet>
					<!-- Important -->
					<portlet-name>ITIC-System</portlet-name>
			
					<display-name>ITIC-System-Portlet</display-name>
					<portlet-class>com.millenniumit.mx.portlets.itic.IticSystemPortlet</portlet-class>
					<init-param>
						<name>view-jsp</name>
						<value>/itic/index.jsp</value>
					</init-param>
					<expiration-cache>0</expiration-cache>
					<supports>
						<mime-type>text/html</mime-type>
					</supports>
					<portlet-info>
						<title>ITIC-System</title>
						<short-title>ITIC-System</short-title>
						<keywords>ITIC-System</keywords>
					</portlet-info>
					<security-role-ref>
						<role-name>administrator</role-name>
					</security-role-ref>
					<security-role-ref>
						<role-name>guest</role-name>
					</security-role-ref>
					<security-role-ref>
						<role-name>power-user</role-name>
					</security-role-ref>
					<security-role-ref>
						<role-name>user</role-name>
					</security-role-ref>
				</portlet>
			</portlet-app>
					
		